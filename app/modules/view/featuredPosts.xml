<view>
	<div id="featuredPosts" class="carousel slide">
		<div class="carousel-inner">
			<div class="active item view full">
		    <table class="table table-hover table-striped">
		      <thead>
		        <tr>
		          <th></th>
		          <th>Title</th>
		          <th>Description</th>
		          <th>Date</th>
		        </tr>
		      </thead>
		      <tbody>
		        <tr>
		          <td>
		          	<div class="btn-group">
		            	<a type="submit" class="btn btn-info" href="#module=featuredPosts&amp;action=edit&amp;id=id01">Edit</a>
		            	<a class="btn btn-danger" type="button" href="#module=featuredPosts&amp;action=delete&amp;id=id01">X</a>
		          	</div>
		          </td>
		          <td>Mark</td>
		          <td>Otto</td>
		          <td>@mdo</td>
		        </tr>
		        <tr>
		          <td>
		          	<div class="btn-group">
		            	<a type="submit" class="btn btn-info" href="#module=featuredPosts&amp;action=edit&amp;id=id02">Edit</a>
		            	<a class="btn btn-danger" type="button" href="#module=featuredPosts&amp;action=delete&amp;id=id02">X</a>
		            </div>
		          </td>
		          <td>Jacob</td>
		          <td>Thornton</td>
		          <td>@fat</td>
		        </tr>
		        <tr>
		          <td>
		          	<div class="btn-group">
		            	<a type="submit" class="btn btn-info" href="#module=featuredPosts&amp;action=edit&amp;id=id03">Edit</a>
		            	<a class="btn btn-danger" type="button" href="#module=featuredPosts&amp;action=delete&amp;id=id03">X</a>
		            </div>
		          </td>
		          <td colspan="2">Larry the Bird</td>
		          <td>@twitter</td>
		        </tr>
		      </tbody>
		    </table>
		    
		    <div class="table-actions text-right">
		    	<a type="button" class="btn btn-large btn-primary" href="#module=featuredPosts&amp;action=add">Add Featured Post</a>
				</div>
			</div>
			
			<div class="item view add edit">
				<form class="form-horizontal">
					<fieldset>
					
						<!-- Form Name -->
						<legend>Add Featured Post</legend>
						
						<!-- Text input-->
						<div class="control-group">
						  <label class="control-label" for="title">Title</label>
						  <div class="controls">
						    <input id="title" name="textinput" type="text" placeholder="" class="input-xlarge" />
						  </div>
						</div>
						
						<!-- Textarea -->
						<div class="control-group">
						  <label class="control-label" for="desc">Description</label>
						  <div class="controls">                     
						    <textarea id="desc" name="textarea"></textarea>
						  </div>
						</div>
						
						<!-- Select Basic -->
						<div class="control-group">
						  <label class="control-label" for="category">Category</label>
						  <div class="controls">
						    <select id="category" name="selectbasic" class="input-large">
						      <option>Category 1</option>
						      <option>Category 2</option>
						    </select>
						  </div>
						</div>
						
						<!-- File Button --> 
						<div class="control-group">
						  <label class="control-label" for="fileThumbFront">Thumbnail Front</label>
						  <div class="controls">
						    <input id="fileThumbFront" name="fileThumbFront" class="input-file" type="file" />
						  </div>
						</div>
						
						<!-- File Button --> 
						<div class="control-group">
						  <label class="control-label" for="fileThumbBack">Thumbnail Back</label>
						  <div class="controls">
						    <input id="fileThumbBack" name="fileThumbBack" class="input-file" type="file" />
						  </div>
						</div>
						
						<!-- Button -->
						<div class="control-group">
						  <label class="control-label" for="singlebutton"></label>
						  <div class="controls">
						    <button id="singlebutton" name="singlebutton" class="btn btn-primary">Submit</button>
						  </div>
						</div>
					
					</fieldset>
				</form>
			</div>
		</div>
	</div>
</view>